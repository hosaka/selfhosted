{
    email {env.PROXY_CF_API_EMAIL}
    acme_dns cloudflare {env.PROXY_CF_API_TOKEN}
    # acme_ca https://acme-staging-v02.api.letsencrypt.org/directory
    skip_install_trust
}

# public
{$PROXY_PUBLIC_DOMAIN} {
    handle {
        respond 404
    }
}

